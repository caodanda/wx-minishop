.nav{
  display: flex;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}
.nav view{
  flex:1;
  border-bottom: 4rpx solid #e1e1e1 ;
}
.nav .active{
  border-bottom: 4rpx solid var(--themeColor);
}
.pro-list{
  width: 100%;
  display: flex;
  padding: 20rpx 10rpx;
  height: 200rpx;
}
.pro-image{
  flex:2;
}
.pro-image image{
  width: 160rpx;
}
.pro-content{
  flex:5
}
.pro-content .text{
  width: 520rpx;
  height: 80rpx;
  overflow: hidden;
  display:-webkit-box;
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2;
}
.pro-content .price{
  padding-top: 18rpx;
  color: var(--themeColor);
  font-weight: 500;
}